<div class="container">
  <h1>Order History</h1>

  <% if @orders.any? %>
    <% @orders.each do |order| %>
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title">Order ID: <%= order.id %></h2>
          <p class="card-text">Total Price: <%= order.total_price %></p>
          <p class="card-text">Total Price with Tax: <%= order.total_price_with_tax %></p>
          <p class="card-text">Order Date: <%= order.created_at %></p>
          
          <h3>Order Items:</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total price with tax</th>
              </tr>
            </thead>
            <tbody>
              <% order.order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.product.name %></td>
                  <td><%= order_item.quantity %></td>
                  <td>$<%= order_item.price %></td>
                  <td>$<%= order_item.total_price_with_tax %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No orders found.</p>
  <% end %>
</div>
